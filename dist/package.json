{
  "name": "rswe",
  "displayName": "RSWE - Remote Software Engineering",
  "description": "AI-powered software engineering with Claude integration",
  "version": "1.0.0",
  "publisher": "rswe",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rswe-sidebar",
          "title": "RSWE",
          "icon": "resources/rswe-icon.svg"
        }
      ]
    },
    "views": {
      "rswe-sidebar": [
        {
          "id": "rswe.chatView",
          "name": "Chat",
          "type": "webview"
        },
        {
          "id": "rswe.mcpView",
          "name": "MCP Servers"
        },
        {
          "id": "rswe.projectView",
          "name": "Project Analysis"
        }
      ]
    },
    "commands": [
      {
        "command": "rswe.chatView.clear",
        "title": "Clear Chat",
        "category": "RSWE"
      },
      {
        "command": "rswe.mcpView.refresh",
        "title": "Refresh MCP Servers",
        "category": "RSWE"
      },
      {
        "command": "rswe.projectView.analyze",
        "title": "Analyze Project",
        "category": "RSWE"
      }
    ]
  }
}
